<Window x:Class="Unwound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unwound - Chord Progression Generator"
        Width="1200"
        Height="700"
        MinWidth="800"
        MinHeight="500"
        Background="#0a0a0a"
        FontFamily="Consolas"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00ff88" Offset="0"/>
            <GradientStop Color="#00cc6a" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#39ff14" Offset="0"/>
            <GradientStop Color="#00ff88" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1a1a1a" Offset="0"/>
            <GradientStop Color="#0a0a0a" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e1e1e" Offset="0"/>
            <GradientStop Color="#141414" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ff3333" Offset="0"/>
            <GradientStop Color="#cc0000" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="#0a0a0a"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Back"
                                    Width="50"
                                    Height="26"
                                    Background="#2a2a2a"
                                    BorderBrush="#00ff88"
                                    BorderThickness="2"
                                    CornerRadius="13"/>
                            <Border x:Name="Switch"
                                    Width="18"
                                    Height="18"
                                    HorizontalAlignment="Left"
                                    Margin="4,0,0,0"
                                    Background="#666666"
                                    CornerRadius="9">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="SwitchTransform" X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Back" Property="Background" Value="#00ff88"/>
                                <Setter TargetName="Switch" Property="Background" Value="#0a0a0a"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="24"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#00ff88"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="#00ff88"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                Margin="12,8"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                TextElement.Foreground="#00ff88"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#00ff88"
                                                      Margin="0,0,12,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2a2a2a"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <ToggleButton.Background>
                                    <SolidColorBrush Color="#1e1e1e"/>
                                </ToggleButton.Background>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="#1e1e1e"
                                        CornerRadius="8"
                                        Margin="0,5,0,0"
                                        BorderThickness="1"
                                        BorderBrush="#00ff88">
                                    <ScrollViewer MaxHeight="200" 
                                                VerticalScrollBarVisibility="Auto"
                                                HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00ff88"/>
                                <Setter Property="Foreground" Value="#0a0a0a"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00cc6a"/>
                                <Setter Property="Foreground" Value="#0a0a0a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="6"
                                Margin="0,2"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter x:Name="content"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a1a1a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00ff88"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00ff88"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="#0a0a0a"/>
                                <Setter TargetName="content" Property="TextElement.FontWeight" Value="Bold"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00ff88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource DarkGradient}"
            CornerRadius="15"
            BorderThickness="2"
            BorderBrush="#00ff88">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="#0f0f0f"
                    CornerRadius="13,13,0,0"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#00ff88"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="▶ UNWOUND // CHORD GENERATOR"
                               Foreground="#00ff88"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0">
                        <Button Content="—"
                                Click="Minimize_Click"
                                Style="{StaticResource ModernButton}"
                                Width="40"
                                Height="30"
                                Padding="0"
                                FontSize="16"
                                Margin="5,0">
                            <Button.Background>
                                <SolidColorBrush Color="#1e1e1e"/>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="#00ff88"/>
                            </Button.Foreground>
                        </Button>
                        <Button Content="⤢"
                                Click="Maximize_Click"
                                Style="{StaticResource ModernButton}"
                                Width="40"
                                Height="30"
                                Padding="0"
                                FontSize="16"
                                Margin="5,0">
                            <Button.Background>
                                <SolidColorBrush Color="#1e1e1e"/>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="#00ff88"/>
                            </Button.Foreground>
                        </Button>
                        <Button Content="✕"
                                Click="Close_Click"
                                Style="{StaticResource ModernButton}"
                                Width="40"
                                Height="30"
                                Padding="0"
                                FontSize="16"
                                Margin="5,0">
                            <Button.Background>
                                <StaticResource ResourceKey="DangerGradient"/>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="White"/>
                            </Button.Foreground>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" MinWidth="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0"
                        Background="{StaticResource CardGradient}"
                        CornerRadius="0,0,0,13"
                        BorderThickness="0,0,1,0"
                        BorderBrush="#00ff88"
                        Padding="20">
                    <StackPanel>
                        <!-- Show Diagrams Toggle -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="DIAGRAMS"
                                       Foreground="#00ff88"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="DiagramToggle"
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="DiagramToggle_Changed"
                                      Unchecked="DiagramToggle_Changed"/>
                        </Grid>

                        <Rectangle Fill="#00ff88"
                                   Height="1"
                                   Margin="0,0,0,15"/>

                        <TextBlock x:Name="InstrumentLabel"
                                   Text="// INSTRUMENT"
                                   Foreground="#333333"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <ListBox x:Name="InstrumentList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#333333"
                                 FontSize="14"
                                 SelectionChanged="InstrumentList_SelectionChanged">
                            <ListBoxItem Content="GUITAR" Tag="Guitar"/>
                            <ListBoxItem Content="PIANO" Tag="Piano"/>
                            <ListBoxItem Content="BASS" Tag="Bass"/>
                            <ListBoxItem Content="VIOLIN" Tag="Violin"/>
                        </ListBox>

                        <Rectangle Fill="#00ff88"
                                   Height="2"
                                   Margin="0,20"/>

                        <TextBlock Text="// INFO"
                                   Foreground="#00ff88"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#00cc6a"
                                   FontSize="11"
                                   LineHeight="16">
                            <Run Text="Use 'SURPRISE ME' for random inspiration."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Experiment with different scales and keys to discover new sounds."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Main Area -->
                <Grid Grid.Column="1" Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="200"/>
                        <RowDefinition Height="*" MinHeight="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Controls -->
                    <Border Grid.Row="0"
                            Background="{StaticResource CardGradient}"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="#00ff88"
                            Padding="20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="// CONFIGURE PROGRESSION"
                                       Foreground="#00ff88"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>

                            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <StackPanel Margin="0,0,15,10">
                                    <TextBlock Text="KEY"
                                               Foreground="#666666"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <ComboBox x:Name="KeyCombo"
                                              Width="120"
                                              Style="{StaticResource ModernComboBox}"
                                              SelectionChanged="OnSelectionChanged">
                                        <ComboBoxItem Content="C"/>
                                        <ComboBoxItem Content="C#"/>
                                        <ComboBoxItem Content="Db"/>
                                        <ComboBoxItem Content="D"/>
                                        <ComboBoxItem Content="Eb"/>
                                        <ComboBoxItem Content="E"/>
                                        <ComboBoxItem Content="F"/>
                                        <ComboBoxItem Content="F#"/>
                                        <ComboBoxItem Content="Gb"/>
                                        <ComboBoxItem Content="G"/>
                                        <ComboBoxItem Content="Ab"/>
                                        <ComboBoxItem Content="A"/>
                                        <ComboBoxItem Content="Bb"/>
                                        <ComboBoxItem Content="B"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,15,10">
                                    <TextBlock Text="SCALE"
                                               Foreground="#666666"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ScaleCombo"
                                              Width="120"
                                              Style="{StaticResource ModernComboBox}"
                                              SelectionChanged="OnSelectionChanged">
                                        <ComboBoxItem Content="Major"/>
                                        <ComboBoxItem Content="Minor"/>
                                        <ComboBoxItem Content="Chromatic"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,15,10">
                                    <TextBlock Text="CHORDS"
                                               Foreground="#666666"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <ComboBox x:Name="CountCombo"
                                              Width="120"
                                              Style="{StaticResource ModernComboBox}"
                                              SelectionChanged="OnSelectionChanged">
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                        <ComboBoxItem Content="7"/>
                                        <ComboBoxItem Content="8"/>
                                        <ComboBoxItem Content="9"/>
                                        <ComboBoxItem Content="10"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,15,10">
                                    <TextBlock Text=" "
                                               FontSize="11"
                                               Margin="0,0,0,5"/>
                                    <Button Content="⚡ SURPRISE ME"
                                            Click="SurpriseMe_Click"
                                            Style="{StaticResource ModernButton}">
                                        <Button.Background>
                                            <SolidColorBrush Color="#00ff88"/>
                                        </Button.Background>
                                    </Button>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text=" "
                                               FontSize="11"
                                               Margin="0,0,0,5"/>
                                    <Button Content="⟲ REFRESH"
                                            Click="Refresh_Click"
                                            Style="{StaticResource ModernButton}"/>
                                </StackPanel>
                            </WrapPanel>
                        </Grid>
                    </Border>

                    <!-- Center Display -->
                    <Border x:Name="ChordDisplayBorder"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Background="{StaticResource CardGradient}"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="#00ff88"
                            Padding="40"
                            Margin="0,0,0,20">
                        <Viewbox StretchDirection="Both">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">

                                <Border Background="#0a0a0a"
                                        BorderBrush="#00ff88"
                                        BorderThickness="2"
                                        CornerRadius="10"
                                        Padding="30,20"
                                        Margin="0,0,0,30">
                                    <TextBlock x:Name="RomanText"
                                               Text="I  –  IV  –  V"
                                               Foreground="#00ff88"
                                               FontSize="56"
                                               FontWeight="Bold"
                                               TextAlignment="Center"/>
                                </Border>

                                <TextBlock x:Name="ChordText"
                                           Text="C  –  F  –  G"
                                           Foreground="#39ff14"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Viewbox>
                    </Border>

                    <!-- Chord Diagrams -->
                    <Border x:Name="DiagramsPanel"
                            Grid.Row="2"
                            Background="{StaticResource CardGradient}"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="#00ff88"
                            Padding="20"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <Viewbox StretchDirection="Both">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="DiagramsContainer"
                                           Orientation="Horizontal"
                                           HorizontalAlignment="Center"/>
                            </ScrollViewer>
                        </Viewbox>
                    </Border>

                    <!-- Footer Info -->
                    <Border Grid.Row="3"
                            Background="Transparent"
                            Margin="0,0,0,0">
                        <TextBlock Text="// Press REFRESH to generate a new progression with the same settings"
                                   Foreground="#00cc6a"
                                   FontSize="11"
                                   TextAlignment="Center"
                                   FontStyle="Italic"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
